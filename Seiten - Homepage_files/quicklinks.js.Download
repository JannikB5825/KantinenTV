		window.open('https://portal.mybender.com/sites/businessProcesses/SitePages/Zeitbuchung.aspx?isDlg=1','zeiterfassung','height=600, width=480, left=' + left +', top=100, resizable=yes, scrollbars=yes, toolbar=no, menubar=no, location=no, replace=true, status=yes').focus();
		return false;
	}